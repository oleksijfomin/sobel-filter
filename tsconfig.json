{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./public",
    "strictNullChecks": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "./",
    "lib": [
      "es2019",
      "es2015",
      "dom.iterable",
      "es6",
      "es2016.array.include",
      "es2017.object",
      "dom"
    ],
    "module": "UMD",
    "removeComments": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types"],
    "paths": {}
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./build",
    "./dist",
    "./coverage",
    "./node_modules",
    "./jest",
    "./commitlint.config.js",
    "./jest.config.js",
    "./jest-base.config.js"
  ]
}
